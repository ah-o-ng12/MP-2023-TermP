<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="257dp"
        android:layout_height="107dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rg_id"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo" />

    <EditText
        android:id="@+id/rg_pass"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="패스워드"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/rg_id"
        app:layout_constraintStart_toStartOf="@+id/rg_id"
        app:layout_constraintTop_toBottomOf="@+id/rg_id" />
    <EditText
        android:id="@+id/rg_pass2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="패스워드 확인"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/rg_pass"
        app:layout_constraintStart_toStartOf="@+id/rg_pass"
        app:layout_constraintTop_toBottomOf="@+id/rg_pass" />

    <EditText
        android:id="@+id/rg_name"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="닉네임"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/rg_pass2"
        app:layout_constraintStart_toStartOf="@+id/rg_pass2"
        app:layout_constraintTop_toBottomOf="@+id/rg_pass2"
        />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="가입하기"
        android:background="@drawable/blue_btn"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/rg_name"
        app:layout_constraintStart_toStartOf="@+id/rg_name"
        app:layout_constraintTop_toBottomOf="@+id/rg_name" />


</androidx.constraintlayout.widget.ConstraintLayout>